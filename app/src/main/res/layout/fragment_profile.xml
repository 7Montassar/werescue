<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginStart="160dp"
            android:textColor="@color/colorAccent"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="340dp"
        android:layout_height="80dp"
        android:background="@drawable/square_profile"
        android:layout_marginTop="140dp"
        android:layout_marginStart="35dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/prifile_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/circle_shape"
                android:src="@drawable/profil_icon"/>

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="10dp"
                android:text="Xavier Britto"
                android:textColor="@color/white"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="35dp"
                android:text="xavier.britto@gmail.com"
                android:textColor="@color/white"
                android:textSize="13dp" />



        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        >
        <RelativeLayout
            android:layout_width="340dp"
            android:layout_height="70dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="220dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/change_pass"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:layout_marginStart="80dp"
                android:layout_marginTop="24dp"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/goIcon"
                android:layout_width="40dp"
                android:layout_height="38dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="290dp"
                android:src="@drawable/go_icon"
                />
        </RelativeLayout>

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logoutButton"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="20dp"
        android:textStyle="bold"
        android:text="Logout"
        android:textColor="#fff"
        android:textSize="18dp"
        android:background="@drawable/btn_gradient"
        android:layout_marginTop="470dp"
        />

</FrameLayout>